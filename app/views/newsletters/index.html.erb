<div class='row'>
	<div class='col-md-2'></div>
	<div class='col-md-8'>
		<h1>View The Phoenix Club Newsletter</h1>

		<%= render 'shared/flash' %>

		<% @newsletters.each do |nl| %>
		  <p><%= link_to "#{nl.month} #{nl.year}", nl.newsletter_file.url %>
		  	<% if session[:member_id] && current_user.is_admin %>
		  	   | <%= link_to 'Edit', edit_newsletter_path(nl) %> | <%= link_to 'Delete', newsletter_path(nl), {method: :delete} %>
		  	 <% end %>
		  </p>
		<% end %>

		<% if session[:member_id] && current_user.is_admin %>
		  <p><%= link_to 'Add Newsletter', new_newsletter_path %></p>
		<% end %>
	</div>
	<div class='col-md-2'></div>
</div>