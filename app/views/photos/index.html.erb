<div class='row'>
	<div class='col-md-3'></div>
	<div class='col-md-6'>
		<h1>The Phoenix Club Photo Gallery</h1>

		<%= render 'shared/flash' %>

		<% @photos.each do |photo| %>
		  <%= image_tag photo.photo_file.url, {style: 'max-width: 100%;'} %>
		  <p><%= photo.caption %></p>
		  <% if session[:member_id] && current_user.is_admin %>
		    <p><%= link_to "Edit Photo", edit_photo_path(photo) %> | <%= link_to "Delete Photo", photo_path(photo), {method: :delete} %>
		    </p>
		  <% end %>
		<% end %>

		<p>
			<% if session[:member_id] && current_user.is_admin %>
				<button type = "button" class = "btn btn-primary">
					<%= link_to 'Add New Photo', new_photo_path, {style: "text-decoration:none; color:white;"} %>
				</button>
			<% end %>
		</p>
	</div>
	<div class='col-md-3'></div>
</div>