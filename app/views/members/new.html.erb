<%= form_for :member, url: members_path, method: :post, html: {id: 'new-member'} do |f| %>

  <%= render 'errors' %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label 'Make Admin' %>
  <%= f.check_box :is_admin %>

  <%= f.submit 'Create New User' %>
<% end %>