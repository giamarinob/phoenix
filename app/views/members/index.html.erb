<div class='row'>
	<div class='col-md-3'></div>
	<div class='col-md-6'>
		<h2>Current Members</h2>

		<table>
			<% @members.each do |member| %>
			  <tr>
			  	<td><%= link_to member.name, member_path(member) %></td>
			  	<td><%= link_to 'Edit', edit_member_path(member) %></td>
			  	<td><%= link_to 'Remove Member', member_path(member), {method: :delete} %></td>
			  </tr>
			<% end %>
		</table>

		<button type = "button" class = "btn btn-primary"><%= link_to "Add New Member", new_member_path, {class: 'home-btn'} %></button>
	</div>
	<div class='col-md-3'></div>
</div>